<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                
            <form  action="/images/add" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="image title "> 
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="image Description"></textarea>
                </div>

                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                        <label for="inputGroupFilel01" class="custom-file-label">Choose a file</label>
                    </div>
                </div>

                <button class="btn btn-primary">Upload Photo</button>
            </form>
            </div>
        </div>
    </div> 

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>title</th>
                    <th>Description</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {{#each photos}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>
                            <a href="{{imageUrl}}" target="_blank" class="btn btn-primary">View</a>
                            <a href="" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tr>
            </tbody>
        </table> 


    </div> 
</div>


